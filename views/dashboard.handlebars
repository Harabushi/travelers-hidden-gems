<div class="container">
  <h1 style="text-align: center">Dashboard</h1>


  <div class="row d-flex dash">

    {{#if posts.length}}
    <section class="col d-flex flex-column" style="margin-left: 30px">
      <div class="d-flex row">
        <div class="col text-nowrap">
          <h2 style="margin-left: 10px">Your Posts</h2>
        </div>
        <div class="col d-flex justify-content-end">
          <a href="/dashboard/newpost"><button class="btn btn-primary">Create New Post</button></a>
        </div>
      </div>


      <div class="container" style="margin-top: 25px">

        <div class="row row-cols-1 row-cols-xl-2 g-4">

          {{#each posts as |post|}}
          <div class="col">

            <div class="card m-2 f-1">
              <div class="card-header">
                <a href="post/{{id}}">
                  <h5 class="post-title">{{title}}</h5>
                </a>
                <p class="post-byline"><span class="post-user">{{user.username}}</span> | {{format_date created_at}}
                  ({{timeSince created_at}})</p>
                  <a href="/dashboard/edit/{{id}}"><button class="btn btn-primary">Edit Post</button></a>
              </div>
              <div class="card-body">
                <p class="card-text">{{contents}}</p>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>

    </section>
    {{/if}}

    {{>map-dash}}

    <br />

  </div>
</div>