<section>
    {{>map}}
    <div class="container" style="margin-top: 25px">
        <div class="row row-cols-1 row-cols-md-2 g-4 mb-2">

            {{#each posts as |post|}}
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <a href="post/{{id}}">
                            <h5 class="post-title">{{title}}</h5>
                        </a>
                        <p class="post-byline">
                            <span class="post-user">{{user.username}}</span> | {{format_date
                            created_at}}
                            ({{timeSince created_at}})
                        </p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{contents}}</p>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>